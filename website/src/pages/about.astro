---
/**
 * About Page - Art Frost Portfolio
 * Информация о себе, навыки, опыт и путь в IT
 *
 * SEO:
 * - PersonJsonLd schema для Rich Results
 * - BreadcrumbJsonLd для навигационных цепочек
 * - OG-теги для соцсетей
 */
import PageLayout from '@layouts/PageLayout.astro';
import Section from '@components/common/Section.astro';
import PersonJsonLd from '@components/seo/PersonJsonLd.astro';
import BreadcrumbJsonLd from '@components/seo/BreadcrumbJsonLd.astro';
import { AboutHero, SkillsList, Timeline } from '@components/about';
import { profile } from '@data/profile';
import { getAllSkills } from '@data/skills';
import { socialLinks } from '@data/social-links';

// SEO meta
const title = 'Обо мне';
const description = `${profile.name} — ${profile.title}. ${profile.shortBio} Узнайте больше о моём опыте, навыках и пути в IT.`;

// Breadcrumb navigation
const breadcrumbs = [
  { name: 'Главная', url: '/' },
  { name: 'Обо мне', url: '/about' },
];

// Social links for PersonJsonLd (sameAs)
const sameAsLinks = socialLinks
  .filter((link) => link.isPrimary)
  .map((link) => link.url);

// Top skills for knowsAbout
const knowsAboutSkills = getAllSkills()
  .filter((skill) => skill.level === 'expert' || skill.level === 'advanced')
  .slice(0, 10)
  .map((skill) => skill.name);
---

<PageLayout
  title={title}
  description={description}
  type="website"
  image="/assets/images/og/about.png"
>
  <!-- JSON-LD Schema for SEO -->
  <PersonJsonLd
    slot="head"
    name={profile.name}
    alternateName="artfrost"
    jobTitle={profile.title}
    description={profile.shortBio}
    image={profile.avatar}
    email={profile.email}
    sameAs={sameAsLinks}
    knowsAbout={knowsAboutSkills}
  />
  <BreadcrumbJsonLd slot="head" items={breadcrumbs} />

  <div class="page-bg">
    <!-- About Hero Section -->
    <AboutHero class="relative z-10" />

    <!-- Skills Section -->
    <Section
      id="skills"
      spacing="lg"
      background="none"
      containerSize="xl"
      class="relative z-10"
    >
      <div class="section-frame p-6 md:p-10">
        <SkillsList showLevels={false} activeOnly={true} />
      </div>
    </Section>

    <!-- Timeline / Experience Section -->
    <Section
      id="experience"
      spacing="lg"
      background="none"
      containerSize="xl"
      class="relative z-10"
    >
      <div class="section-frame p-6 md:p-10">
        <Timeline showSkills={true} limit={4} />
      </div>
    </Section>

    <!-- Call to Action Section -->
    <Section
      id="contact"
      spacing="lg"
      background="none"
      containerSize="lg"
      class="relative overflow-hidden z-10"
    >
      <div class="section-frame p-6 md:p-10">
    <!-- Background glow -->
    <div
      class="absolute inset-0 pointer-events-none"
      aria-hidden="true"
    >
      <div
        class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] rounded-full opacity-10"
        style="background: radial-gradient(circle, var(--color-primary-glow) 0%, transparent 70%);"
      />
    </div>

      <!-- CTA Content -->
      <div class="relative text-center max-w-2xl mx-auto">
      <h2 class="heading-section mb-4">
        <span class="bg-gradient-to-r from-white via-white/80 to-white/40 bg-clip-text text-transparent">
          Давайте создадим что-то вместе
        </span>
      </h2>
      <p class="body-large text-[var(--color-text-muted)] mb-8">
        Открыт для интересных проектов, сотрудничества и новых идей.
      </p>
      
      <!-- Social Links Grid (6 buttons with colored glow) -->
      <div class="grid grid-cols-2 md:grid-cols-3 gap-4 mb-8">
        {socialLinks
          .filter((link) => link.isPrimary)
          .sort((a, b) => a.order - b.order)
          .map((link) => {
            // White glow for black logos
            const glowColor = (link.color === '#000000' || link.color === '#181717') ? '#ffffff' : link.color;
            return (
              <a
                href={link.url}
                target="_blank"
                rel="noopener noreferrer"
                class="flex flex-col items-center justify-center gap-2 px-4 py-5 rounded-xl
