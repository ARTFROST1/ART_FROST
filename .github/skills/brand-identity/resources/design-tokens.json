{
  "meta": {
    "brand_name": "ArtFrost",
    "theme": "Dark Glassmorphism",
    "description": "Design tokens inspired by Nextra references: Deep greens, frosted glass, and neon accents.",
    "theme_behavior": {
      "default": "dark",
      "supports": ["dark", "light"],
      "toggle": "required",
      "transition_ms": 200
    }
  },
  "themes": {
    "dark": {
      "colors": {
        "background": {
          "default": "#050605",
          "secondary": "#0A0C0A",
          "glass": "rgba(255, 255, 255, 0.03)"
        },
        "primary": {
          "DEFAULT": "#10B981",
          "glow": "#10B98180",
          "gradient_start": "#10B981",
          "gradient_end": "#059669"
        },
        "text": {
          "heading": "#FFFFFF",
          "body": "#A1A1AA",
          "muted": "#52525B"
        },
        "border": {
          "glass": "rgba(255, 255, 255, 0.08)",
          "active": "#10B981"
        }
      }
    },
    "light": {
      "colors": {
        "background": {
          "default": "#F7F9F8",
          "secondary": "#EEF2F0",
          "glass": "rgba(5, 6, 5, 0.04)"
        },
        "primary": {
          "DEFAULT": "#059669",
          "glow": "#05966933",
          "gradient_start": "#10B981",
          "gradient_end": "#059669"
        },
        "text": {
          "heading": "#0B0F0C",
          "body": "#1F2937",
          "muted": "#6B7280"
        },
        "border": {
          "glass": "rgba(5, 6, 5, 0.10)",
          "active": "#059669"
        }
      }
    }
  },
  "colors": {
    "background": {
      "default": "#050605",
      "secondary": "#0A0C0A",
      "glass": "rgba(255, 255, 255, 0.03)"
    },
    "primary": {
      "DEFAULT": "#10B981",
      "glow": "#10B98180",
      "gradient_start": "#10B981",
      "gradient_end": "#059669"
    },
    "text": {
      "heading": "#FFFFFF",
      "body": "#A1A1AA",
      "muted": "#52525B"
    },
    "border": {
      "glass": "rgba(255, 255, 255, 0.08)",
      "active": "#10B981"
    }
  },
  "effects": {
    "glass_blur": "backdrop-filter: blur(12px);",
    "glass_gradient": "linear-gradient(180deg, rgba(255,255,255,0.05) 0%, rgba(255,255,255,0.01) 100%)",
    "glow_shadow": "0 0 40px -10px rgba(16, 185, 129, 0.3)",
    "page_background": {
      "ambient_glows": {
        "primary": "radial-gradient(circle at 70% 20%, rgba(16,185,129,0.20) 0%, transparent 55%)",
        "secondary": "radial-gradient(circle at 20% 80%, rgba(16,185,129,0.12) 0%, transparent 60%)"
      },
      "vignette": "radial-gradient(circle at 50% 50%, rgba(0,0,0,0) 40%, rgba(0,0,0,0.75) 100%)",
      "grid": {
        "size_px": 64,
        "line_color": "rgba(255,255,255,0.06)",
        "line_width_px": 1,
        "mask": "radial-gradient(circle at 50% 30%, rgba(0,0,0,1) 0%, rgba(0,0,0,0) 70%)"
      },
      "noise": {
        "recommended_opacity": 0.04,
        "note": "Use subtle film-grain/noise only if needed; keep extremely light for performance."
      }
    },
    "panel": {
      "inset_highlight": "inset 0 1px 0 rgba(255,255,255,0.06)",
      "deep_shadow": "0 20px 60px -30px rgba(0,0,0,0.7)"
    }
  },
  "radii": {
    "card": 20,
    "card_strong": 24,
    "section_frame": 32
  },
  "typography": {
    "font_family_display": ["Inter", "sans-serif"],
    "font_family_body": ["Roboto", "sans-serif"]
  }
}
