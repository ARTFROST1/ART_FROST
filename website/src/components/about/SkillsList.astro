---
/**
 * SkillsList Component
 * Skills organized by categories with glassmorphism cards and tags
 * Features: Category grouping, skill levels, icons, animated entries
 *
 * @example
 * <SkillsList />
 * <SkillsList showLevels={true} maxCategories={3} />
 */

import { cn } from '@lib/utils';
import Card from '@components/common/Card.astro';
import Tag from '@components/common/Tag.astro';
import { skillCategories, type SkillLevel } from '@data/skills';

interface Props {
  /** Show skill levels */
  showLevels?: boolean;
  /** Limit number of categories */
  maxCategories?: number;
  /** Show only active skills */
  activeOnly?: boolean;
  /** Additional CSS classes */
  class?: string;
}

const {
  showLevels = false,
  maxCategories,
  activeOnly = true,
  class: className,
} = Astro.props;

// Skill level badges
const levelStyles: Record<SkillLevel, { bg: string; text: string }> = {
  beginner: { bg: 'bg-slate-500/20', text: 'text-slate-400' },
  intermediate: { bg: 'bg-blue-500/20', text: 'text-blue-400' },
  advanced: { bg: 'bg-purple-500/20', text: 'text-purple-400' },
  expert: { bg: 'bg-brand-500/20', text: 'text-brand-500' },
};

const levelLabels: Record<SkillLevel, string> = {
  beginner: 'Начинающий',
  intermediate: 'Средний',
  advanced: 'Продвинутый',
  expert: 'Эксперт',
};

// Category icons mapping
const categoryIcons: Record<string, string> = {
  monitor: 'M3 4a1 1 0 011-1h16a1 1 0 011 1v10a1 1 0 01-1 1h-6.5v2H17a1 1 0 110 2H7a1 1 0 110-2h3.5v-2H4a1 1 0 01-1-1V4zm2 1v8h14V5H5z',
  server: 'M2 5a2 2 0 012-2h16a2 2 0 012 2v4a2 2 0 01-2 2H4a2 2 0 01-2-2V5zm18 0H4v4h16V5zm-2 2.5a.5.5 0 11-1 0 .5.5 0 011 0zM2 15a2 2 0 012-2h16a2 2 0 012 2v4a2 2 0 01-2 2H4a2 2 0 01-2-2v-4zm18 0H4v4h16v-4zm-2 2.5a.5.5 0 11-1 0 .5.5 0 011 0z',
  wrench: 'M14.7 6.3a1 1 0 000 1.4l1.6 1.6a1 1 0 001.4 0l3.77-3.77a6 6 0 01-7.94 7.94l-6.91 6.91a2.12 2.12 0 01-3-3l6.91-6.91a6 6 0 017.94-7.94l-3.76 3.76z',
  bot: 'M12 2a2 2 0 012 2v2h4a2 2 0 012 2v12a2 2 0 01-2 2H6a2 2 0 01-2-2V8a2 2 0 012-2h4V4a2 2 0 012-2zm-2 8a2 2 0 100 4 2 2 0 000-4zm6 0a2 2 0 100 4 2 2 0 000-4zm-6 8h4v-2h-4v2z',
  sparkles: 'M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09zM18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 00-2.456 2.456z',
};

// Filter and sort categories
let categories = [...skillCategories].sort((a, b) => a.order - b.order);

if (maxCategories) {
  categories = categories.slice(0, maxCategories);
}
---

<section class={cn('relative', className)}>
  <!-- Section Header -->
  <div class="text-center mb-12 animate-on-scroll">
    <h2 class="heading-section mb-4">
      <span class="bg-gradient-to-r from-white via-white/80 to-white/40 bg-clip-text text-transparent">
        Навыки и технологии
      </span>
    </h2>
    <p class="body-large text-[var(--color-text-muted)] max-w-2xl mx-auto">
      Стек технологий, с которыми я работаю ежедневно
    </p>
  </div>

  <!-- Skills Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {categories.map((category, categoryIndex) => {
      const filteredSkills = activeOnly
        ? category.skills.filter((s) => s.isActive)
        : category.skills;

      return (
        <div 
          class="animate-on-scroll"
          style={`transition-delay: ${200 + categoryIndex * 100}ms;`}
        >
        <Card
          hover
          gradient
          padding="lg"
          class="group h-full"
        >
          <!-- Category Header -->
          <div class="flex items-center gap-3 mb-5">
            <!-- Icon -->
            <div
              class={cn(
                'w-10 h-10 rounded-xl flex items-center justify-center',
                'bg-[var(--color-primary)]/10 text-[var(--color-primary)]',
                'group-hover:bg-[var(--color-primary)]/20 transition-colors duration-300'
              )}
            >
              <svg
                class="w-5 h-5"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path d={categoryIcons[category.icon] || categoryIcons.sparkles} />
              </svg>
            </div>
            
            <!-- Category Name -->
            <div>
              <h3 class="text-lg font-semibold text-[var(--color-text-heading)]">
                {category.name}
              </h3>
              <span class="text-xs text-[var(--color-text-muted)]">
                {filteredSkills.length} {filteredSkills.length === 1 ? 'навык' : 'навыков'}
              </span>
            </div>
          </div>

          <!-- Skills Tags -->
          <div class="flex flex-wrap gap-2">
            {filteredSkills.map((skill) => (
              <div class="relative group/skill">
                <Tag
                  variant={skill.level === 'expert' ? 'primary' : 'default'}
                  size="md"
                  class="transition-transform duration-200 group-hover/skill:scale-105"
                >
                  {skill.name}
                  {skill.years && (
                    <span class="ml-1 text-[var(--color-text-muted)] text-xs">
                      {skill.years}y
                    </span>
                  )}
                </Tag>
                
                {/* Tooltip with level (if enabled) */}
                {showLevels && (
                  <div
                    class={cn(
                      'absolute -top-8 left-1/2 -translate-x-1/2 px-2 py-1 rounded text-xs whitespace-nowrap',
                      'opacity-0 invisible group-hover/skill:opacity-100 group-hover/skill:visible',
                      'transition-all duration-200 z-10',
                      levelStyles[skill.level].bg,
                      levelStyles[skill.level].text
                    )}
                  >
                    {levelLabels[skill.level]}
                  </div>
                )}
              </div>
            ))}
          </div>
        </Card>
        </div>
      );
    })}
  </div>

  <!-- Legend (if showing levels) -->
  {showLevels && (
    <div class="flex flex-wrap gap-4 justify-center mt-8 pt-8 border-t border-[var(--color-border-glass)]">
      {Object.entries(levelLabels).map(([level, label]) => (
        <div class="flex items-center gap-2">
          <span
            class={cn(
              'w-3 h-3 rounded-full',
              levelStyles[level as SkillLevel].bg,
              'border border-current',
              levelStyles[level as SkillLevel].text
            )}
          />
          <span class="text-sm text-[var(--color-text-muted)]">
            {label}
          </span>
        </div>
      ))}
    </div>
  )}
</section>
