{
  "meta": {
    "brand_name": "ArtFrost",
    "theme": "Dark Glassmorphism",
    "description": "Design tokens inspired by Nextra references: Deep greens, frosted glass, and neon accents.",
    "theme_behavior": {
      "default": "dark",
      "supports": ["dark", "light"],
      "toggle": "required",
      "transition_ms": 200
    }
  },
  "themes": {
    "dark": {
      "colors": {
        "background": {
          "default": "#050605",
          "secondary": "#0A0C0A",
          "glass": "rgba(255, 255, 255, 0.03)"
        },
        "primary": {
          "DEFAULT": "#10B981",
          "glow": "#10B98180",
          "gradient_start": "#10B981",
          "gradient_end": "#059669"
        },
        "text": {
          "heading": "#FFFFFF",
          "body": "#A1A1AA",
          "muted": "#52525B"
        },
        "border": {
          "glass": "rgba(255, 255, 255, 0.08)",
          "active": "#10B981"
        }
      }
    },
    "light": {
      "colors": {
        "background": {
          "default": "#F7F9F8",
          "secondary": "#EEF2F0",
          "glass": "rgba(5, 6, 5, 0.04)"
        },
        "primary": {
          "DEFAULT": "#059669",
          "glow": "#05966933",
          "gradient_start": "#10B981",
          "gradient_end": "#059669"
        },
        "text": {
          "heading": "#0B0F0C",
          "body": "#1F2937",
          "muted": "#6B7280"
        },
        "border": {
          "glass": "rgba(5, 6, 5, 0.10)",
          "active": "#059669"
        }
      }
    }
  },
  "colors": {
    "background": {
      "default": "#050605",
      "secondary": "#0A0C0A",
      "glass": "rgba(255, 255, 255, 0.03)"
    },
    "primary": {
      "DEFAULT": "#10B981",
      "glow": "#10B98180",
      "gradient_start": "#10B981",
      "gradient_end": "#059669"
    },
    "text": {
      "heading": "#FFFFFF",
      "body": "#A1A1AA",
      "muted": "#52525B"
    },
    "border": {
      "glass": "rgba(255, 255, 255, 0.08)",
      "active": "#10B981"
    }
  },
  "effects": {
    "glass_blur": "backdrop-filter: blur(12px);",
    "glass_gradient": "linear-gradient(180deg, rgba(255,255,255,0.05) 0%, rgba(255,255,255,0.01) 100%)",
    "glow_shadow": "0 0 40px -10px rgba(16, 185, 129, 0.3)"
  },
  "typography": {
    "font_family_display": ["Inter", "sans-serif"],
    "font_family_body": ["Roboto", "sans-serif"]
  }
}
