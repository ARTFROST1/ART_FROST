/**
 * Icon Component
 * Wrapper for SVG icons with consistent sizing and styling
 *
 * @example
 * <Icon name="github" />
 * <Icon name="telegram" size="lg" class="text-primary" />
 */

import { cn } from '@lib/utils';

interface Props {
  /** Icon name (matches SVG file or icon library) */
  name: string;
  /** Icon size */
  size?: 'xs' | 'sm' | 'md' | 'lg' | 'xl';
  /** Additional CSS classes */
  class?: string;
  /** Accessible label */
  label?: string;
}

const {
  name,
  size = 'md',
  class: className,
  label,
} = Astro.props;

// Size mapping in pixels
