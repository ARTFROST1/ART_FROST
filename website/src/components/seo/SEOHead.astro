---
/**
 * SEOHead - компонент для SEO мета-тегов
 * Включает: title, description, OG, Twitter Cards, canonical URL
 * 
 * Использование:
 * <SEOHead
 *   slot="head"
 *   title="About"
 *   description="Узнайте больше об Art Frost"
 *   image="/og/about.png"
 * />
 */

import {
  truncate,
  generateTitle,
  generateCanonicalUrl,
  formatOgImage,
} from '@lib/utils/seo';

export interface Props {
  /**
   * Заголовок страницы (без site name)
   * Site name добавляется автоматически
   */
  title?: string;
  /**
   * Описание страницы (до 160 символов)
   */
  description?: string;
  /**
   * OG-изображение (относительный или абсолютный путь)
    * По умолчанию: /favicon.png (временный safe default, чтобы не было 404)
   */
  image?: string;
  /**
   * Тип страницы для Open Graph
   * @default 'website'
   */
  type?: 'website' | 'article' | 'profile';
  /**
   * Запретить индексацию страницы
   * @default false
   */
  noindex?: boolean;
  /**
   * Дата публикации (для article)
   */
  publishedTime?: string;
  /**
   * Дата изменения (для article)
   */
  modifiedTime?: string;
  /**
   * Автор (для article)
   */
  author?: string;
  /**
   * Ключевые слова (через запятую)
   */
  keywords?: string;
}

// Константы сайта
const SITE_NAME = 'Art Frost';
const SITE_URL = Astro.site?.toString() || 'https://artfrost.vercel.app';
const DEFAULT_DESCRIPTION = 'Персональный сайт Art Frost — IT-специалист, vibe coder. Портфолио проектов, блог о технологиях и разработке.';
const DEFAULT_IMAGE = '/assets/images/og/default.png'; // Обновлённый дефолт
const TWITTER_HANDLE = '@artfrost';
const LOCALE = 'ru_RU';

const {
  title,
  description = DEFAULT_DESCRIPTION,
  image = DEFAULT_IMAGE,
  type = 'website',
  noindex = false,
  publishedTime,
  modifiedTime,
  author = SITE_NAME,
  keywords,
} = Astro.props;

// Генерируем значения
const fullTitle = generateTitle(title ?? '', SITE_NAME);
const metaDescription = truncate(description, 160);
const canonicalUrl = generateCanonicalUrl(Astro.url.pathname, SITE_URL);
const ogImage = formatOgImage(image, SITE_URL);
---

<!-- Primary Meta Tags -->
<title>{fullTitle}</title>
<meta name="title" content={fullTitle} />
<meta name="description" content={metaDescription} />
<meta name="author" content={author} />

{keywords && <meta name="keywords" content={keywords} />}

{/* Robots */}
{noindex ? (
  <meta name="robots" content="noindex, nofollow" />
) : (
  <meta name="robots" content="index, follow" />
)}

<!-- Canonical URL (override BaseLayout default) -->
<link rel="canonical" href={canonicalUrl} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={canonicalUrl} />
<meta property="og:title" content={fullTitle} />
<meta property="og:description" content={metaDescription} />
<meta property="og:image" content={ogImage} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:image:alt" content={fullTitle} />
<meta property="og:site_name" content={SITE_NAME} />
<meta property="og:locale" content={LOCALE} />

{/* Article-specific OG tags */}
{type === 'article' && publishedTime && (
  <meta property="article:published_time" content={publishedTime} />
)}
{type === 'article' && modifiedTime && (
  <meta property="article:modified_time" content={modifiedTime} />
)}
{type === 'article' && author && (
  <meta property="article:author" content={author} />
)}

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:url" content={canonicalUrl} />
<meta name="twitter:title" content={fullTitle} />
<meta name="twitter:description" content={metaDescription} />
<meta name="twitter:image" content={ogImage} />
<meta name="twitter:image:alt" content={fullTitle} />
<meta name="twitter:site" content={TWITTER_HANDLE} />
<meta name="twitter:creator" content={TWITTER_HANDLE} />
